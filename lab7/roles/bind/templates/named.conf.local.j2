zone "itinfra" {
{% if dns_role == "master" %}
	type master;
	file "/etc/bind/db";
  allow-transfer {192.168.1.3;};
	notify yes;
{% else %}
  type slave;
  file "/var/lib/bind/db";
  masters {
    {{ master_ip }};
  };
{% endif %}
};

zone "1.168.192.in-addr.arpa" {
{% if dns_role == "master" %}
	type master;
	file "/etc/bind/db.ptr";
  allow-transfer {192.168.1.3;};
{% else %}
  type slave;
  file "/var/lib/bind/db.ptr";
  masters {
    {{ master_ip }};
  };
{% endif %}
};
statistics-channels {
  inet 127.0.0.1 port 8053 allow { 127.0.0.1; };
};
